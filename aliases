#!/bin/zsh

alias c="clear"
alias cat="bat -p"
alias cht-edit="vim ~/dotfiles/cheatsheet.md"
alias cht="cat ~/dotfiles/cheatsheet.md"
alias ga="git commit --amend --no-edit"
alias gcm="git checkout master && git pull"
alias gd="git diff"
alias gs="git status"
alias lsa="ls -laG"
alias purge="curl -X PURGE"
alias reload="PATH="" exec /bin/zsh -l"
alias rp="source ~/.prompt"
alias sentry-js-check="yarn && yarn clean && yarn build && yarn lint && yarn test"
alias tb="nc termbin.com 9999 | pbcopy"
alias update-node-packages="npx npm-check-updates --u && npm install"
alias update="brew update && brew upgrade && brew cleanup -s"
alias vim="nvim"
alias wipe="git reset --hard && git clean -df"
alias yt="youtube-dl -f 'bestvideo[ext=mp4][height<=720]+bestaudio[ext=m4a]/best[ext=mp4][height<=720]/best' --no-playlist"
alias kp="kill-port"
