    "auto_fold_dirs": false
  },
  "features": {
    "inline_completion_provider": "none",
    "copilot": false
  },
  "assistant": {
    "version": "2",
    "enabled": false
  },
  "terminal": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "outline_panel": {
    "dock": "right"
  },

  // Behavior
